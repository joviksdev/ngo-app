<div class="contact-section container py-4">
  <div class="row">
    <div class="contact-address col-12 col-md-6">Contact Address</div>
    <div class="contact-form col-12 col-md-6">
      <p class="msg">Say Hi by dropping a message</p>
      <form>
        <div class="form-group mb-3">
          <label for="user-name" class="sr-only">Name</label>
          <input
            type="text"
            name="user-name"
            id="user-name"
            class="form-control"
          />
        </div>
        <div class="form-group mb-3">
          <label for="user-name" class="sr-only">Email</label>
          <input
            type="email"
            name="user-email"
            id="user-email"
            class="form-control"
            placeholder="Email"
          />
        </div>
        <div class="form-group mb-3">
          <label for="user-name" class="sr-only">Message</label>
          <textarea
            class="form-control"
            name="user-msg"
            id="user-msg"
            cols="10"
            rows="4"
          ></textarea>
        </div>
        <input type="button" value="Send" class="btn btn-success px-5 my-2" />
      </form>
    </div>
  </div>
</div>
