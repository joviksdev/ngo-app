<section class="events-gallery-wrapper py-5">
  <div class="container">
    <div class="row g-3">
      <div class="event col-sm-12 col-md-6 col-lg-5" data-aos="fade-right" data-aos-delay="200" data-aos-easing="ease-in-sine" data-aos-duration="400" data-aos-once="true">
        <h5 class="event-heading text-capitalize mb-3">upcomming events</h5>
        <%- include('./partials/lineSeparator') %>
        <div class="event-contents m-0 row g-3">
          <% events.forEach(event => { %>
            <div class="col-2 text-center event-date p-2 align-self-start">
              <div class="display-6 pb-2 icon-day"><%= event.iconDay %></div>
              <div class="pt-2"><%= event.iconMonth %></div>
            </div>
